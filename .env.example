# LustBot Environment Configuration

# Groq Configuration (Primary LLM Provider)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# OpenAI Configuration (Legacy/Optional)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENV=us-east1-gcp
PINECONE_INDEX_NAME=lust-products

# External APIs
FIRECRAWL_KEY=your-firecrawl-api-key

# Google Services
GOOGLE_SHEET_ID=your-google-sheet-id
GMAIL_CREDS_PATH=creds/gmail.json
SHEETS_CREDS_PATH=creds/sheets.json
# For Render deployment - paste the entire JSON content of your service account file
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", "project_id": "your-project-id", ...}

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8001

# CORS Settings (comma-separated)
CORS_ORIGINS=*
